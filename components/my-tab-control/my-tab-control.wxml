<!--components/my-tab-control/my-tab-control.wxml-->

<view class="tab-control">
  <view 
    wx:for="{{tabControl}}"
    wx:key="*this"
    class="control {{index==tabIndex? 'active': ''}}" 
    bind:tap="handleControl" 
    data-item-index="{{index}}"
    data-item="{{item}}"
  >
    <text class="control-text">{{item}}</text>
  </view>
</view>